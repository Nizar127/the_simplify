<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#372A28"
    tools:context=".MoreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

        <TextView
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Profile"
            android:textColor="#FAFAFA"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
             />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/hello"
            android:layout_centerInParent="true"
            android:padding="20dp"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="20sp"
                    android:textColor="#FAFAFA"
                    />

                <TextView
                    android:id="@+id/EmailData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20sp"
                    android:textColor="#FAFAFA"
                    />
            </LinearLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="20sp"
                    android:textColor="#FAFAFA"
                    />

                <TextView
                    android:id="@+id/NameData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20sp"
                    android:textColor="#FAFAFA"
                    />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCompany"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textSize="20sp"
                    android:text="Company Name"
                    android:textColor="#FAFAFA"
                    />

                <TextView
                    android:id="@+id/CompanyData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textSize="20sp"
                    android:text="Company Name"
                    android:textColor="#FAFAFA"
                    />

            </LinearLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPhone"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="20sp"
                    android:textColor="#FAFAFA"
                    />

                <TextView
                    android:id="@+id/PhoneData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="20sp"
                    android:textColor="#FAFAFA"
                    />

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:gravity="center"
            >



        <Button
            android:id="@+id/btnEdit"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_bg"
            android:shadowColor="@color/white"
            android:text="Edit"
            android:textColor="#372A28"
            android:textColorHighlight="#0FFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FFEB3B"
            tools:ignore="MissingConstraints"
            android:layout_margin="30dp"/>

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:background="@drawable/btn_bg"
            android:shadowColor="@color/white"
            android:text="Sign Out"
            android:textColor="#372A28"
            android:textColorHighlight="#0FFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FFEB3B"
            android:layout_margin="30dp"
            />

        </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-4dp"
        android:background="#FFEB3B"
        app:itemIconTint="#423A30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottomnav">
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>